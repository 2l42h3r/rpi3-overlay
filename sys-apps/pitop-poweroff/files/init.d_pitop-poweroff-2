description="Ensure Pi-Top hub powered off properly on system shutdown"

depend() {
	after mount-ro 
}

start() {
   	ebegin "Starting ${SVCNAME}"
	einfo "***************************************************"
	einfo "*    Your Pi-Top will power down in 5 seconds.    *"
	einfo "***************************************************"
	/usr/sbin/pt-poweroff &>/dev/null
	eend $?
}
